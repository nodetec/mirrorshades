{
  "name": "mirrorshades",
  "version": "0.1.0",
  "type": "module",
  "description": "A react library to create themes for codemirror",
  "homepage": "nodetec.co",
  "repository": {
    "type": "git",
    "url": "https://github.com/nodetec/mirrorshades"
  },
  "files": [
    "dist/**/*"
  ],
  "funding": [
    {
      "type": "patreon",
      "url": "https://www.patreon.com/chrisatmachine"
    },
    "https://getalby.com/p/chrisatmachine"
  ],
  "main": "dist/index.cjs",
  "module": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsup src/index.ts --format cjs,esm --dts",
    "watch": "tsup src/index.ts --format cjs,esm --dts --watch",
    "lint": "tsc",
    "outdated": "bunx npm-check-updates -ui -p bun"
  },
  "keywords": [
    "codemirror",
    "theme"
  ],
  "author": "Christian Chiarulli",
  "license": "GPL-3.0",
  "devDependencies": {
    "@types/eslint": "^8.56.5",
    "@types/node": "^20.11.24",
    "@typescript-eslint/eslint-plugin": "^7.1.0",
    "bun-types": "latest",
    "eslint": "^8.57.0",
    "prettier": "^3.2.5",
    "tsup": "^8.0.2"
  },
  "peerDependencies": {
    "typescript": ">=5.0.0",
    "@codemirror/language": "^6.10.1",
    "@codemirror/state": "^6.4.1",
    "@codemirror/view": "^6.24.1",
    "@lezer/highlight": "^1.2.0"
  }
}
